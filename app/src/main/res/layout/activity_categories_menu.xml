<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriesMenu"
    >


    <Button
        android:id="@+id/places"
        style="@style/button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/place"
        app:layout_constraintBottom_toTopOf="@id/objects"
        app:layout_constraintEnd_toStartOf="@id/movies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        />

    <Button
        android:id="@+id/movies"
        style="@style/button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/movie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/culture_leaders"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        />

    <Button
        android:id="@+id/companies"
        style="@style/button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/company"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/movies"
        app:layout_constraintBottom_toTopOf="@id/scientists"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        />

    <Button
        android:id="@+id/objects"
        style="@style/button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/object"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintBottom_toTopOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/culture_leaders"
        />

    <Button
        android:id="@+id/culture_leaders"
        style="@style/button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/culture_leaders"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintBottom_toTopOf="@id/divider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/sports"
        style="@style/button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="45dp"
        android:text="@string/sport"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/nature"
        app:layout_constraintTop_toBottomOf="@+id/culture_leaders"
        app:layout_constraintBottom_toTopOf="@id/divider2"
        />

    <Button
        android:id="@+id/nature"
        style="@style/button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="45dp"
        android:text="@string/nature"
        app:layout_constraintEnd_toStartOf="@id/sports"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/culture_leaders"
        app:layout_constraintBottom_toTopOf="@id/divider2"
        />


    <Button
        android:id="@+id/scientists"
        style="@style/button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/scientists"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintBottom_toTopOf="@id/divider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/culture_leaders"
        />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:clickable="true"
        android:onClick="start"
        android:text="@string/start"
        style="@style/PrimaryTextButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85"
        android:focusable="true" />

    <ImageButton
        android:id="@+id/return_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_home"
        android:onClick="returnButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/places"
        />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/sports"
        app:layout_constraintBottom_toTopOf="@id/start"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/categories"
        style="@style/Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>